{
  "name": "zapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:db-up": "bash -c 'RUNTIME=$(./scripts/detect-container-runtime.sh) && $RUNTIME compose --env-file .env -f ./docker/docker-compose.yml up'",
    "dev:zero-cache": "bunx zero-cache-dev -p src/zero/schema.ts",
    "dev:api": "bun run --watch api/server.ts",
    "dev:ui": "bunx vite",
    "dev": "concurrently -n api,ui,zero -c cyan,magenta,yellow \"bun run dev:api\" \"bun run dev:ui\" \"bun run dev:zero-cache\"",
    "dev:all": "bun run dev:db-up & sleep 3 && bun run dev",
    "dev:db-down": "bash -c 'RUNTIME=$(./scripts/detect-container-runtime.sh) && $RUNTIME compose --env-file .env -f ./docker/docker-compose.yml down'",
    "dev:clean": "bash -c 'source .env && RUNTIME=$(./scripts/detect-container-runtime.sh) && $RUNTIME volume rm -f docker_zstart_pgdata && rm -rf \"${ZERO_REPLICA_FILE}\"*'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:sync": "bun run db:generate && bun run db:migrate && bun run generate-zero-schema",
    "generate-zero-schema": "drizzle-zero generate -s src/db/schema.ts -o src/zero/schema.gen.ts --format --disable-legacy-mutators --disable-legacy-queries",
    "build": "bun run tsc -b && bunx vite build",
    "lint": "bunx eslint ."
  },
  "dependencies": {
    "@duckdb/node-api": "^1.4.2-r.1",
    "@nivo/bar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@rocicorp/zero": "0.24.3000000000",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.139.14",
    "@tanstack/react-start": "^1.139.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "drizzle-orm": "^0.44.7",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.5",
    "jose": "^5.9.6",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.555.0",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "recharts": "2.15.4",
    "sst": "3.9.33",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "uplot": "^1.6.32"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@tanstack/router-plugin": "^1.139.14",
    "@types/bun": "^1.3.3",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autocannon": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.8",
    "drizzle-zero": "^0.16.2",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "hono": "^4.10.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vercel": "^41.3.2",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "trustedDependencies": [
    "@rocicorp/zero-sqlite3"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@rocicorp/zero-sqlite3"
    ]
  },
  "_": "For some reason, sst requires esbuild 0.25.0 when deploying the permission deployer",
  "overrides": {
    "esbuild": "0.25.0"
  }
}
